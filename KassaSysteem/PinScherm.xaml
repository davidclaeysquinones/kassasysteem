<Window x:Class="KassaSysteem.PinScherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KassaSysteem"
        mc:Ignorable="d"
        Title="PinScherm" Height="130" Width="100" MinHeight="130" MinWidth="200" MaxHeight="120" MaxWidth="100" Closing="PinScherm_OnClosing" PreviewKeyDown="PinScherm_OnPreviewKeyDown">
    <Grid>
        <StackPanel>
            <Label Name="Output" Foreground="Red" HorizontalContentAlignment="Center" Height="25"></Label>
            <Label HorizontalContentAlignment="Center">Pincode</Label>
            <PasswordBox MaxLength="20" HorizontalContentAlignment="Center"  Name="Input" ForceCursor="True"></PasswordBox>
            <Button Click="GoToAdmin">Submit</Button>
        </StackPanel>
    </Grid>
   
</Window>
